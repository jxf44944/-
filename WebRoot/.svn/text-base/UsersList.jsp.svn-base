<%@ page contentType="text/html; charset=utf-8" language="java"  errorPage="" %>
<%@ taglib prefix="s" uri="/struts-tags" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>用户列表</title>
<link rel="stylesheet" type="text/css" href="css/main.css"/>
</head>

<body>
<div id="title_bar">
	<span id="title" > 系统管理&gt;&gt;用户列表</span>
    <ul id="operation">
    	<li><input type="checkbox" name="checkbox11" id="checkbox11" />全选</li>
        <li><img src="images/add.gif" width="10" height="10"  /><a href="UserstoAdd"> 添加</a></li>
        <li><img src="images/edit.gif" width="10" height="10" /><a href="#"> 编辑</a></li>
        <li><img src="images/del.gif" width="10" height="10" /> 删除</li>
    </ul>
</div>

<table id="list_table" >
      <tr>
      <!--   <th width="8%"   >选择</th>
       -->  <th width="6%"  >编号</th>
        <th width="15%" >用户名称</th>
        <th width="15%">用户角色 </th>
        <th width="10%">用户所在部门</th>
        <th width="30%">用户简介</th>
        <th width="15%" >基本操作</th>
      </tr>
      
       	<s:iterator value="userList" var="user">
			<tr>
				<td>
					<s:property value="#user.userId"/>
				</td>
				<td>
					<s:property value="#user.username" />				
				</td>
				<td>
					<s:property value="#user.roles.roleName" />
				</td>
				<td>
					<s:property value="#user.depts.deptName"/>
				</td>
				<td>
					<s:property value="#user.userDesc"/>
				</td>
				
				<td>修改 | 删除 </td>
			</tr>       	
       	
       	</s:iterator>
     
    </table>
    
<div id="page_bar">
	<div id="page">
    	共有<strong> 243</strong> 条记录，当前第<strong> 1</strong> 页，共 <strong>10</strong> 页
    </div>
    
   <div id="tool">
  	<a href="#">首页</a>
    <a href="#">上一页</a>
    <a href="#">下一页</a>
    <a href="#">末页</a>
    转到<input type="text" name="currentPage" value="5"/>页
  </div>
</div>
</body>
</html>
